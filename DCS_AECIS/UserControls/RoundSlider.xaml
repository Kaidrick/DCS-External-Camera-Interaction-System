<UserControl x:Class="DCS_AECIS.RoundSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCS_AECIS"
             mc:Ignorable="d" Height="220" Width="58">
    <Grid>
        <Canvas x:Name="CanvasSlider" HorizontalAlignment="Left" Height="220" VerticalAlignment="Top" Width="58">
            <Border x:Name="BorderSliderBase" BorderBrush="Black" BorderThickness="1" CornerRadius="17" Height="200" Canvas.Left="10" Canvas.Top="10" Width="38" Background="#FFF4F4F5"/>
            <Ellipse x:Name="EllipseSliderKnob" Fill="White" HorizontalAlignment="Left" Stroke="Black" Width="30" Height="30" VerticalAlignment="Top" Canvas.Left="14" Canvas.Top="95" MouseMove="EllipseJoystickKnob_MouseMove" MouseLeftButtonDown="EllipseSliderKnob_MouseLeftButtonDown" MouseLeftButtonUp="EllipseSliderKnob_MouseLeftButtonUp"/>
        </Canvas>
    </Grid>
</UserControl>
