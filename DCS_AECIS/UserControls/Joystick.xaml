<UserControl x:Class="DCS_AECIS.Joystick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCS_AECIS"
             mc:Ignorable="d" Height="240" Width="240">
    <Grid x:Name="GridControl" Margin="0,0,0,0" Width="200" Height="200">
        <Canvas x:Name="CanvasJoystick" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="200">
            <Ellipse x:Name="EllipseJoystickBase" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="180" Stroke="Black" VerticalAlignment="Top" Width="180" Canvas.Left="10" Canvas.Top="10"/>
            <Ellipse x:Name="EllipseJoystickKnob" Fill="White" HorizontalAlignment="Left" Height="60" Stroke="Black" VerticalAlignment="Top" Width="60" Canvas.Left="70" Canvas.Top="70" MouseLeftButtonDown="EllipseJoystickKnob_MouseLeftButtonDown" MouseLeftButtonUp="EllipseJoystickKnob_MouseLeftButtonUp" MouseMove="EllipseJoystickKnob_MouseMove"/>
        </Canvas>
    </Grid>
</UserControl>
