<UserControl x:Class="DCS_AECIS.RangeSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCS_AECIS"
             mc:Ignorable="d" Width="20" Height="210">
    <Grid Width="20">
        <Canvas x:Name="CanvasSlider" HorizontalAlignment="Left" Height="220" VerticalAlignment="Top" Width="20">
            <Border x:Name="BorderSliderBase" BorderBrush="Black" BorderThickness="1" CornerRadius="6" Height="200" Canvas.Left="4" Canvas.Top="5" Width="12" Background="#FFF4F4F5" MouseWheel="EllipseSliderKnob_MouseWheel"/>
            <Ellipse x:Name="EllipseSliderKnob" Fill="White" HorizontalAlignment="Left" Stroke="Black" Width="20" Height="20" VerticalAlignment="Top" Canvas.Left="0" Canvas.Top="190" MouseMove="EllipseJoystickKnob_MouseMove" MouseLeftButtonDown="EllipseSliderKnob_MouseLeftButtonDown" MouseLeftButtonUp="EllipseSliderKnob_MouseLeftButtonUp" MouseWheel="EllipseSliderKnob_MouseWheel"/>
        </Canvas>
    </Grid>
</UserControl>
