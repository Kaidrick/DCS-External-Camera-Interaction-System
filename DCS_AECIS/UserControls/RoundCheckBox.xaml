<UserControl x:Class="DCS_AECIS.RoundCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCS_AECIS"
             mc:Ignorable="d" Height="71" Width="38.25">
    <Grid>
        <Canvas x:Name="CanvasSlider" HorizontalAlignment="Left" Height="71" VerticalAlignment="Top" Width="38">
            <Border x:Name="BorderSliderBase" BorderBrush="Black" BorderThickness="1" CornerRadius="17" Height="71" Width="38" Background="#FFF4F4F5" Canvas.Top="0"/>
            <Ellipse x:Name="EllipseSliderKnob" Fill="White" HorizontalAlignment="Left" Stroke="Black" Width="30" Height="30" VerticalAlignment="Top" Canvas.Left="4" Canvas.Top="37" MouseLeftButtonDown="EllipseSliderKnob_MouseLeftButtonDown"/>
        </Canvas>
    </Grid>
</UserControl>
